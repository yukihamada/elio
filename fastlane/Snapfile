# Snapfile - Screenshot configuration for Elio

# デバイス設定（App Store要件に対応）
devices([
  "iPhone 16 Pro Max",      # 6.9インチ (6.7インチ互換)
  "iPhone 16 Pro",          # 6.3インチ (6.1インチ互換)
  "iPhone SE (3rd generation)"  # 4.7インチ
])

# 言語設定
languages([
  "ja",
  "en-US"
])

# プロジェクト設定
project("./LocalAIAgent.xcodeproj")
scheme("LocalAIAgentUITests")

# 出力設定
output_directory("./fastlane/screenshots")
clear_previous_screenshots(true)

# クリーンビルド
clean(true)

# テスト失敗時も続行
stop_after_first_error(false)

# スクリーンショット撮影前の待機時間
launch_arguments(["-UITest_Screenshots"])

# 並列実行を無効化（安定性のため）
concurrent_simulators(false)
