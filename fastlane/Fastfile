default_platform(:ios)

# ============================================
# macOS (Mac Catalyst)
# ============================================

platform :mac do
  desc "Build macOS app (Mac Catalyst)"
  lane :build do
    build_app(
      project: "ElioChat.xcodeproj",
      scheme: "ElioChat",
      catalyst_platform: "macos",
      destination: "generic/platform=macOS,variant=Mac Catalyst",
      skip_codesigning: true,
      skip_archive: true
    )
  end

  desc "Deploy macOS to TestFlight"
  lane :beta do
    api_key = app_store_connect_api_key(
      key_id: "5KT46G9Y29",
      issuer_id: "e0d22675-afb3-45f0-a821-06b477f44da0",
      key_filepath: File.expand_path("~/.appstoreconnect/private_keys/AuthKey_5KT46G9Y29.p8"),
      in_house: false
    )

    increment_build_number(
      build_number: latest_testflight_build_number(
        api_key: api_key,
        platform: "osx"
      ) + 1
    )

    build_app(
      project: "ElioChat.xcodeproj",
      scheme: "ElioChat",
      catalyst_platform: "macos",
      configuration: "Release",
      export_method: "app-store",
      destination: "generic/platform=macOS,variant=Mac Catalyst",
      export_options: {
        signingStyle: "automatic",
        teamID: "5BV85JW8US"
      }
    )

    upload_to_testflight(
      api_key: api_key,
      app_platform: "osx",
      skip_waiting_for_build_processing: true
    )

    clean_build_artifacts
  end

  desc "Deploy macOS to Mac App Store"
  lane :release do
    api_key = app_store_connect_api_key(
      key_id: "5KT46G9Y29",
      issuer_id: "e0d22675-afb3-45f0-a821-06b477f44da0",
      key_filepath: File.expand_path("~/.appstoreconnect/private_keys/AuthKey_5KT46G9Y29.p8"),
      in_house: false
    )

    increment_build_number(
      build_number: latest_testflight_build_number(
        api_key: api_key,
        platform: "osx"
      ) + 1
    )

    build_app(
      project: "ElioChat.xcodeproj",
      scheme: "ElioChat",
      catalyst_platform: "macos",
      configuration: "Release",
      export_method: "app-store",
      destination: "generic/platform=macOS,variant=Mac Catalyst",
      export_options: {
        signingStyle: "automatic",
        teamID: "5BV85JW8US"
      }
    )

    upload_to_app_store(
      api_key: api_key,
      platform: "osx",
      submit_for_review: true,
      automatic_release: false,
      skip_screenshots: true,
      skip_metadata: false,
      precheck_include_in_app_purchases: false,
      force: true
    )

    clean_build_artifacts
  end

  error do |lane, exception|
    UI.error("Mac lane #{lane} failed: #{exception}")
  end
end

# ============================================
# iOS
# ============================================

platform :ios do
  before_all do
    # Xcode version is set via xcode-select in CI workflow
    # Do not use xcversion as it may select a different version
  end

  desc "Run all tests"
  lane :test do
    run_tests(
      project: "ElioChat.xcodeproj",
      scheme: "ElioChat",
      devices: ["iPhone 16 Pro"],
      clean: true,
      code_coverage: true,
      result_bundle: true
    )
  end

  desc "Run unit tests only"
  lane :unit_test do
    run_tests(
      project: "ElioChat.xcodeproj",
      scheme: "ElioChat",
      only_testing: ["LocalAIAgentTests"],
      devices: ["iPhone 16 Pro"],
      clean: true
    )
  end

  desc "Build the app (no signing)"
  lane :build do
    build_app(
      project: "ElioChat.xcodeproj",
      scheme: "ElioChat",
      skip_codesigning: true,
      skip_archive: true,
      destination: "generic/platform=iOS Simulator"
    )
  end

  desc "Deploy to TestFlight"
  lane :beta do
    # Use API key from JSON file
    api_key = app_store_connect_api_key(
      key_id: "5KT46G9Y29",
      issuer_id: "e0d22675-afb3-45f0-a821-06b477f44da0",
      key_filepath: File.expand_path("~/.appstoreconnect/private_keys/AuthKey_5KT46G9Y29.p8"),
      in_house: false
    )

    # Increment build number (disabled - manually set with agvtool)
    # increment_build_number(
    #   build_number: 37
    # )

    # Get latest provisioning profile from App Store Connect (no match password needed)
    get_provisioning_profile(
      api_key: api_key,
      app_identifier: "love.elio.app",
      team_id: "5BV85JW8US"
    )

    # Build the app with automatic signing
    build_app(
      project: "ElioChat.xcodeproj",
      scheme: "ElioChat",
      configuration: "Release",
      export_method: "app-store",
      destination: "generic/platform=iOS",
      sdk: "iphoneos",
      export_options: {
        signingStyle: "automatic",
        teamID: "5BV85JW8US"
      }
    )

    # Upload to TestFlight
    upload_to_testflight(
      api_key: api_key,
      skip_waiting_for_build_processing: true
    )

    # Clean up
    clean_build_artifacts
  end

  desc "Deploy to App Store"
  lane :release do
    # Use local API key file for local execution
    api_key = app_store_connect_api_key(
      key_id: "5KT46G9Y29",
      issuer_id: "e0d22675-afb3-45f0-a821-06b477f44da0",
      key_filepath: File.expand_path("~/.appstoreconnect/private_keys/AuthKey_5KT46G9Y29.p8"),
      in_house: false
    )

    # Increment build number (disabled - manually set with agvtool)
    # increment_build_number(
    #   build_number: 37
    # )

    # Get latest provisioning profile from App Store Connect
    get_provisioning_profile(
      api_key: api_key,
      app_identifier: "love.elio.app",
      team_id: "5BV85JW8US"
    )

    # Build the app with automatic signing
    build_app(
      project: "ElioChat.xcodeproj",
      scheme: "ElioChat",
      configuration: "Release",
      export_method: "app-store",
      destination: "generic/platform=iOS",
      sdk: "iphoneos",
      export_options: {
        signingStyle: "automatic",
        teamID: "5BV85JW8US"
      }
    )

    # Upload to App Store Connect with metadata
    upload_to_app_store(
      api_key: api_key,
      submit_for_review: true,
      automatic_release: false,
      skip_screenshots: true,
      skip_metadata: false,
      precheck_include_in_app_purchases: false,
      force: true
    )

    # Clean up
    clean_build_artifacts
  end

  desc "Sync certificates (Match)"
  lane :sync_certificates do
    match(
      type: "appstore",
      app_identifier: "love.elio.app",
      readonly: is_ci
    )
  end

  desc "Upload metadata to App Store Connect"
  lane :upload_metadata do
    api_key = app_store_connect_api_key(
      key_id: "5KT46G9Y29",
      issuer_id: "e0d22675-afb3-45f0-a821-06b477f44da0",
      key_filepath: File.expand_path("~/.appstoreconnect/private_keys/AuthKey_5KT46G9Y29.p8"),
      in_house: false
    )

    deliver(
      api_key: api_key,
      skip_binary_upload: true,
      skip_screenshots: true,
      skip_metadata: false,
      force: true,
      submit_for_review: false,
      automatic_release: false,
      precheck_include_in_app_purchases: false
    )
  end

  desc "Upload screenshots to App Store Connect"
  lane :upload_screenshots do
    api_key = app_store_connect_api_key(
      key_id: "5KT46G9Y29",
      issuer_id: "e0d22675-afb3-45f0-a821-06b477f44da0",
      key_filepath: File.expand_path("~/.appstoreconnect/private_keys/AuthKey_5KT46G9Y29.p8"),
      in_house: false
    )

    deliver(
      api_key: api_key,
      skip_binary_upload: true,
      skip_screenshots: false,
      skip_metadata: true,
      overwrite_screenshots: true,
      force: true,
      submit_for_review: false
    )
  end

  desc "Capture screenshots using snapshot"
  lane :screenshots do
    capture_screenshots(
      project: "LocalAIAgent.xcodeproj",
      scheme: "LocalAIAgentUITests",
      devices: [
        "iPhone 16 Pro Max",
        "iPhone 16 Pro",
        "iPhone SE (3rd generation)"
      ],
      languages: ["ja", "en-US"],
      clear_previous_screenshots: true,
      output_directory: "./fastlane/screenshots"
    )
  end

  desc "Add device frames and promotional text to screenshots"
  lane :frame_screenshots do
    frame_screenshots(
      path: "./fastlane/screenshots",
      white: false,
      force_device_type: "iPhone 16 Pro Max"
    )
  end

  desc "Create App Store screenshots (capture + frame)"
  lane :create_app_store_screenshots do
    screenshots
    frame_screenshots
  end

  # ============================================
  # Firebase Test Lab + Flank
  # ============================================

  desc "Build test bundle for Firebase Test Lab"
  lane :build_for_testing do
    # Create build directory
    sh("mkdir -p ../build")

    # Build for testing (creates xctestrun file)
    scan(
      project: "ElioChat.xcodeproj",
      scheme: "ElioChat",
      build_for_testing: true,
      derived_data_path: "../build/DerivedData",
      sdk: "iphoneos",
      destination: "generic/platform=iOS"
    )

    # Copy xctestrun file to build directory
    sh("cp ../build/DerivedData/Build/Products/*.xctestrun ../build/")
    UI.success("Test bundle ready for Firebase Test Lab")
  end

  desc "Run tests on Firebase Test Lab using Flank (parallel)"
  lane :firebase_test do |options|
    # Build test bundle first
    build_for_testing

    # Set credentials
    ENV["GOOGLE_APPLICATION_CREDENTIALS"] = File.expand_path("./fastlane/firebase/service-account.json")

    # Run Flank
    sh("flank ios run --config=../flank.yml")

    UI.success("Firebase Test Lab tests completed!")
  end

  desc "Run tests on Firebase Test Lab with specific device"
  lane :firebase_test_device do |options|
    device = options[:device] || "iphone14pro"
    version = options[:version] || "17.5"

    build_for_testing

    ENV["GOOGLE_APPLICATION_CREDENTIALS"] = File.expand_path("./fastlane/firebase/service-account.json")

    sh("gcloud firebase test ios run " \
       "--test ./build/*.xctestrun " \
       "--device model=#{device},version=#{version} " \
       "--project elio-chat-app " \
       "--timeout 30m")
  end

  desc "List available iOS devices on Firebase Test Lab"
  lane :firebase_devices do
    sh("gcloud firebase test ios models list --project=elio-chat-app")
  end

  desc "Show app statistics and download info"
  lane :stats do
    require 'net/http'
    require 'json'
    require 'jwt'
    require 'openssl'

    UI.header "ğŸ“Š Fetching Elio App Statistics"

    # API credentials
    key_id = "5KT46G9Y29"
    issuer_id = "e0d22675-afb3-45f0-a821-06b477f44da0"
    key_file = File.expand_path("~/.appstoreconnect/private_keys/AuthKey_#{key_id}.p8")

    # Generate JWT token
    private_key = OpenSSL::PKey::EC.new(File.read(key_file))
    payload = {
      iss: issuer_id,
      iat: Time.now.to_i,
      exp: Time.now.to_i + 1200, # 20 minutes
      aud: "appstoreconnect-v1"
    }
    token = JWT.encode(payload, private_key, 'ES256', header_fields = { kid: key_id })

    # Fetch app info
    uri = URI("https://api.appstoreconnect.apple.com/v1/apps?filter[bundleId]=love.elio.app")
    http = Net::HTTP.new(uri.host, uri.port)
    http.use_ssl = true
    request = Net::HTTP::Get.new(uri)
    request['Authorization'] = "Bearer #{token}"

    response = http.request(request)
    data = JSON.parse(response.body)

    if data['data'] && data['data'].length > 0
      app = data['data'][0]
      app_id = app['id']

      UI.header "ğŸ“± App Information"
      UI.message "App Name: #{app['attributes']['name']}"
      UI.message "Bundle ID: #{app['attributes']['bundleId']}"
      UI.message "App ID: #{app_id}"
      UI.message "SKU: #{app['attributes']['sku']}"
      UI.message ""

      # Get versions
      uri = URI("https://api.appstoreconnect.apple.com/v1/apps/#{app_id}/appStoreVersions")
      request = Net::HTTP::Get.new(uri)
      request['Authorization'] = "Bearer #{token}"
      response = http.request(request)
      versions_data = JSON.parse(response.body)

      if versions_data['data']
        UI.header "ğŸª App Store Versions"
        versions_data['data'].each do |version|
          state = version['attributes']['appStoreState']
          version_string = version['attributes']['versionString']
          UI.message "Version #{version_string}: #{state}"
        end
        UI.message ""
      end

      # Get builds
      uri = URI("https://api.appstoreconnect.apple.com/v1/apps/#{app_id}/builds?limit=10&sort=-uploadedDate")
      request = Net::HTTP::Get.new(uri)
      request['Authorization'] = "Bearer #{token}"
      response = http.request(request)
      builds_data = JSON.parse(response.body)

      if builds_data['data']
        UI.header "ğŸ”¨ Recent Builds (Last 10)"
        builds_data['data'].each do |build|
          version = build['attributes']['version']
          uploaded = build['attributes']['uploadedDate']
          processing = build['attributes']['processingState']
          UI.message "Build #{version} - #{processing} - #{uploaded}"
        end
        UI.message ""
      end

      UI.important "ğŸ“Š Download Analytics"
      UI.important "For download counts and detailed analytics, visit:"
      UI.important "https://appstoreconnect.apple.com/analytics/app/#{app_id}"
      UI.message ""
      UI.success "âœ… Stats retrieved successfully!"
      UI.message ""
      UI.message "ğŸ’¡ Tip: To see downloads, open the analytics URL above"
    else
      UI.error "App not found"
    end
  end

  # Error handling
  error do |lane, exception|
    UI.error("Lane #{lane} failed with exception: #{exception}")
  end
end
