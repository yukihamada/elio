default_platform(:ios)

platform :ios do
  before_all do
    # Xcode version is set via xcode-select in CI workflow
    # Do not use xcversion as it may select a different version
  end

  desc "Run all tests"
  lane :test do
    run_tests(
      project: "LocalAIAgent.xcodeproj",
      scheme: "LocalAIAgent",
      devices: ["iPhone 16 Pro"],
      clean: true,
      code_coverage: true,
      result_bundle: true
    )
  end

  desc "Run unit tests only"
  lane :unit_test do
    run_tests(
      project: "LocalAIAgent.xcodeproj",
      scheme: "LocalAIAgent",
      only_testing: ["LocalAIAgentTests"],
      devices: ["iPhone 16 Pro"],
      clean: true
    )
  end

  desc "Build the app (no signing)"
  lane :build do
    build_app(
      project: "LocalAIAgent.xcodeproj",
      scheme: "LocalAIAgent",
      skip_codesigning: true,
      skip_archive: true,
      destination: "generic/platform=iOS Simulator"
    )
  end

  desc "Deploy to TestFlight"
  lane :beta do
    # Note: Keychain setup is handled by install-certificates.sh script
    # Do not use setup_ci as it creates a separate keychain

    api_key = app_store_connect_api_key(
      key_id: ENV["APP_STORE_CONNECT_API_KEY_ID"],
      issuer_id: ENV["APP_STORE_CONNECT_ISSUER_ID"],
      key_content: ENV["APP_STORE_CONNECT_API_KEY"],
      is_key_content_base64: false
    )

    # Increment build number
    increment_build_number(
      build_number: latest_testflight_build_number(api_key: api_key) + 1
    )

    # Build the app
    build_app(
      project: "LocalAIAgent.xcodeproj",
      scheme: "LocalAIAgent",
      export_method: "app-store",
      xcargs: "CODE_SIGN_STYLE=Manual PROVISIONING_PROFILE_SPECIFIER='Elio AppStore' CODE_SIGN_IDENTITY='Apple Distribution' DEVELOPMENT_TEAM=5BV85JW8US",
      export_options: {
        provisioningProfiles: {
          "love.elio.app" => "Elio AppStore"
        },
        signingStyle: "manual",
        teamID: "5BV85JW8US"
      }
    )

    # Upload to TestFlight
    upload_to_testflight(
      api_key: api_key,
      skip_waiting_for_build_processing: true
    )

    # Clean up
    clean_build_artifacts
  end

  desc "Deploy to App Store"
  lane :release do
    # Note: Keychain setup is handled by install-certificates.sh script
    # Do not use setup_ci as it creates a separate keychain

    api_key = app_store_connect_api_key(
      key_id: ENV["APP_STORE_CONNECT_API_KEY_ID"],
      issuer_id: ENV["APP_STORE_CONNECT_ISSUER_ID"],
      key_content: ENV["APP_STORE_CONNECT_API_KEY"],
      is_key_content_base64: false
    )

    # Increment build number
    increment_build_number(
      build_number: latest_testflight_build_number(api_key: api_key) + 1
    )

    # Build the app
    build_app(
      project: "LocalAIAgent.xcodeproj",
      scheme: "LocalAIAgent",
      export_method: "app-store",
      xcargs: "CODE_SIGN_STYLE=Manual PROVISIONING_PROFILE_SPECIFIER='Elio AppStore' CODE_SIGN_IDENTITY='Apple Distribution' DEVELOPMENT_TEAM=5BV85JW8US",
      export_options: {
        provisioningProfiles: {
          "love.elio.app" => "Elio AppStore"
        },
        signingStyle: "manual",
        teamID: "5BV85JW8US"
      }
    )

    # Upload to App Store Connect
    upload_to_app_store(
      api_key: api_key,
      submit_for_review: false,
      automatic_release: false,
      skip_screenshots: true,
      skip_metadata: true,
      precheck_include_in_app_purchases: false
    )

    # Clean up
    clean_build_artifacts
  end

  desc "Sync certificates (Match)"
  lane :sync_certificates do
    match(
      type: "appstore",
      app_identifier: "love.elio.app",
      readonly: is_ci
    )
  end

  # Error handling
  error do |lane, exception|
    UI.error("Lane #{lane} failed with exception: #{exception}")
  end
end
